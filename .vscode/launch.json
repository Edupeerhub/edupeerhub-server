  "version": "0.2.0",
  "configurations": [
    {   
      "internalConsoleOptions": "openOnSessionStart",
      "name": "Tests",      
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],      
      "runtimeArgs": ["run-script", "test"],
      "runtimeExecutable": "npm",
      "cwd": "${workspaceFolder}",      
      "console": "integratedTerminal",
      "type": "node"
    },
    {
      "name": "Launch Server via Npm",
      "request": "launch",
      "runtimeArgs": ["run-script", "dev"],
      "runtimeExecutable": "npm",
      "cwd": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "type": "node"
    }
  ]
}
